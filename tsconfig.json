{
    "compilerOptions": {
      "baseUrl" : "./",
      "target": "es2015",
      "module": "commonjs",
      "outDir": "./lib",
      "noImplicitAny": false,
      "strict": true,
      "declaration": true,
      "downlevelIteration": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "sourceMap": true,
      "inlineSources": true,
      "lib": [
        "es2018",
        "dom"
      ]
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
  }